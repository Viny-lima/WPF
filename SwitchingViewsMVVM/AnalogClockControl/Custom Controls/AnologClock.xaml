<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AnalogClockControl.Custom_Controls"
                    >
    <Style TargetType="local:AnalogClock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AnalogClock">
                    <Grid>
                        <Line Stroke="Black" StrokeThickness="1" VerticalAlignment="Center" X1="0" X2="75"/>
                        <Line Stroke="Black" StrokeThickness="1" VerticalAlignment="Center" X1="0" X2="100"/>
                        <Line Stroke="Black" StrokeThickness="1" VerticalAlignment="Center" X1="0" X2="100"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>